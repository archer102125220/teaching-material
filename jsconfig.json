{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~": [
        "./"
      ],
      "~/*": [
        "./*"
      ],
      "@": [
        "./"
      ],
      "@/*": [
        "./*"
      ],
      "assets": [
        "./assets"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "public": [
        "./public"
      ],
      "public/*": [
        "./public/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
